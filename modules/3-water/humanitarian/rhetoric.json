  "fallacies": {
    "definition": "Errors in reasoning that appear valid",
    
    "formal_fallacies": {
      "description": "Errors in logical structure",
      
      "affirming_consequent": {
        "form": "If A then B. B. Therefore A.",
        "example": "If rain, grass wet. Grass wet. ∴ It rained.",
        "error": "B can be true without A (sprinkler)"
